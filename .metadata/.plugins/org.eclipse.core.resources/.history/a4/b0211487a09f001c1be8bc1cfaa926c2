package exercicio06;

import javax.swing.JOptionPane;

public class JogoVelha {

	public static void main(String[] args) {
		char[][] jogo = new char[3][3];
		boolean parar = true, numeroRepetido = false;
		int contador = 1, posicao;

		for (int i = 0; i < 3; i++) {
			for (int j = 0; j < 3; j++) {
				jogo[i][j] = Integer.toString(contador).charAt(0);
				contador++;

			}

		}

		while (parar) {

			for (int i = 0; i < 3; i++) {
				System.out.println("");
				for (int j = 0; j < 3; j++) {
					System.out.print(jogo[i][j] + "  ");
				}

			}
			posicao = Integer.parseInt(JOptionPane.showInputDialog("Jogador X Informe a posição"));

			switch (posicao) {
			case 1:
				if (jogo[0][0] == '1') {
					jogo[0][0]='X';
				}
			case 2:
				if (jogo[0][0] == '2') {
					jogo[0][0]='X';
				}

			case 3:
				if (jogo[0][0] == '3') {
					jogo[0][0]='X';
				}
			case 4:
				if (jogo[0][0] == '4') {
					jogo[0][0]='X';
				}
			case 5:
				if (jogo[0][0] == '5') {
					jogo[0][0]='X';
				}
			case 6:
				if (jogo[0][0] == '6') {
					jogo[0][0]='X';
				}
			case 7:
				if (jogo[0][0] == '7') {
					jogo[0][0]='X';
				}
			case 8:
				if (jogo[0][0] == '8') {
					jogo[0][0]='X';
				}
			case 9:
				if (jogo[0][0] == '9') {
					jogo[0][0]='X';
				}
			default:
				JOptionPane.showMessageDialog(null, "Posiçao invalida!!!");
			}

			System.out.println(numeroRepetido);

//			parar=false;

		}

	}

}
