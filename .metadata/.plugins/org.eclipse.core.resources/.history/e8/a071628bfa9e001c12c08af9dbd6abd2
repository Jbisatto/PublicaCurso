package exercicio09;

import javax.swing.JOptionPane;

public class Votacao {

	public static void main(String[] args) {
		int candidato1,candidato2,candidato3,candidato4, totalVotos,voto,parar;
		 do {
			 voto = Integer.parseInt(JOptionPane.showInputDialog("1-André \n2-João\n3-Maria\n4-Paulo"));
			 switch (voto) {
			case 1->candidato1++;
			case 2->candidato2++;
			case 3->candidato3++;
			case 4->candidato4++;
			default-> JOptionPane.showMessageDialog(null, "houve um erro");
			}
			 
			 
			 parar = Integer.parseInt(JOptionPane.showInputDialog("Digite um 0 para encerrrar a vatação!!!"));
			 
		 }while(parar!=0);
		

	}

}
