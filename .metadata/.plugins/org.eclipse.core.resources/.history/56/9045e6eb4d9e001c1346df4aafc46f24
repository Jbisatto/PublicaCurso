package exercicio06;

import javax.swing.JOptionPane;

public class FusoHoraio {

	public static void main(String[] args) {
		int hora = Integer.parseInt(JOptionPane.showInputDialog("Informe a hora de Brasília"));
		int cidade = Integer.parseInt(JOptionPane.showInputDialog("1- Cidade do México \n 2- Tóquio"
				+ "\n 3- Nova York"));
		switch (cidade) {
		case 1: 
			JOptionPane.showMessageDialog(null, "Na cidade do México são "+(hora-3));
			break;
		case 2: 
			JOptionPane.showMessageDialog(null, "Em Tóquio são "+(hora+12));
			break;

		case 3: 
			JOptionPane.showMessageDialog(null, "Terra da banana");
			break;
		default:
			JOptionPane.showMessageDialog(null,"Informação incorreta!!!");
		}
		
		
		
	}

}
